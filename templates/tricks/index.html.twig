{% extends "base.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block header %}
<header class="bg-image py-5 d-flex align-items-center justify-content-center" style="background-image: url({{ asset('image/snowtricks.jpg') }}); background-size: cover; height: 500px;">>
    <div class="container px-5">
        <div class="my-5 text-center">
            <h1 class="display-5 fw-bolder text-white mb-2">Explorez l'art de glisser avec style</h1>
            <p class="lead fw-normal text-white mb-4">Découvrez notre galerie de figures exceptionnelles!</p>
        </div>
    </div>
</header>
{% endblock %}

{% block body %}
<div class="row gx-5">
    {% if tricks is empty%}
        <p class="text-center">Aucunne figure ajouté.</p>
    {% else %}
        {% for trick in tricks %}
        <div class="col-lg-3 mb-5">
            <div class="card h-100 shadow border-0">
                {% if trick.getImages() is not empty%}
                    <img class="card-img-top" src="{{ asset('uploads/image/' ~ trick.getImages()[0].image) }}" alt="trick image" />
                {% else %}
                    <img class="card-img-top" src="{{ asset('image/snowboard.png') }}" alt="trick image default" />
                {% endif %}
                <div class="card-footer p-4 bg-light border-top-0">
                    <div class="row">
                        <div class="col-md-7">
                            <a href="{{ path('get_trick', { slug: trick.slug }) }}">{{ trick.name }}</a>
                        </div>
                        <div class="col-md-5 d-flex align-items-center justify-content-around">
                            <div><i class="bi bi-pencil-fill"></i></div>
                            <div><i class="bi bi-trash-fill"></i></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
        <div class="d-flex justify-content-center mt-5">
            {{ knp_pagination_render(tricks) }}
        </div>
    {% endif %}
</div>
{% endblock %}
