{% extends "base.html.twig" %}

{% block title %}
    Figures
{% endblock %}

{% block body %}
<div id="scroll-icons">
    <div id="scroll-up-icon" class="arrow-icon">&#8593;</div>
    <div id="scroll-down-icon" class="arrow-icon">&#8595;</div>
</div>

<div class="row gx-5">
    {% if tricks is empty%}
        <p class="text-center">Aucunne figure ajout√©.</p>
    {% else %}
        {% for trick in tricks %}
        <div class="col-lg-3 mb-5">
            <div class="card h-100 shadow border-0">
                {% if trick.getImages() is not empty%}
                    <img class="card-img-top" src="{{ asset('uploads/image/' ~ trick.getImages()[0].image) }}" alt="trick image" />
                {% else %}
                    <img class="card-img-top" src="{{ asset('image/snowboard.png') }}" alt="trick image default" />
                {% endif %}
                <div class="card-footer p-4 bg-light border-top-0 h-auto mt-auto">
                    {% if app.user == trick.getUser() %}
                        <div class="row">
                            <div class="col-md-7 my-auto">
                                <a href="{{ path('get_trick', { slug: trick.slug }) }}">{{ trick.name }}</a>
                            </div>
                            <div class="col-md-5 d-flex align-items-center justify-content-around">
                                <a class="btn btn-light" href="{{ path('modify_trick', { slug: trick.slug }) }}"><i class="bi bi-pencil-fill"></i></a>
                                <a class="btn btn-light ms-2" href="#"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </div>
                    {% else %}
                        <a href="{{ path('get_trick', { slug: trick.slug }) }}">{{ trick.name }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
        <div class="d-flex justify-content-center mt-5">
            {{ knp_pagination_render(tricks) }}
        </div>
    {% endif %}
</div>
{% endblock %}
